# Production Environment Configuration for QuickVote
# Copy this to backend/.env for production deployment

APP_NAME=QuickVote
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=http://your-domain.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - Master (Write)
DB_CONNECTION=mysql
DB_HOST=mysql-master
DB_PORT=3306
DB_DATABASE=quickvote
DB_USERNAME=quickvote
DB_PASSWORD=secret
DB_STRICT_MODE=false

# Database - Read Replicas
DB_READ_HOST_1=mysql-replica-1
DB_READ_HOST_2=mysql-replica-2

# Redis Cache
REDIS_HOST=redis-cache
REDIS_PASSWORD=null
REDIS_PORT=6379

# Redis Queue
REDIS_QUEUE_HOST=redis-queue
QUEUE_CONNECTION=redis
QUEUE_DRIVER=redis

# Cache Driver
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Broadcasting & Pusher (if needed)
BROADCAST_DRIVER=log

# Mail (configure if needed)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@quickvote.com"
MAIL_FROM_NAME="${APP_NAME}"

# Laravel Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,your-domain.com
SESSION_DOMAIN=.your-domain.com

# Performance Optimizations
OCTANE_SERVER=swoole
CONFIG_CACHE_DRIVER=file
ROUTE_CACHE_DRIVER=file
VIEW_CACHE_DRIVER=file
